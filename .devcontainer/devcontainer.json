{
	"name": "OpenCloudHub - AI Generative QwenVL",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile",
		"target": "dev"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/project,type=bind",
	"workspaceFolder": "/workspace/project",
	"runArgs": ["--network", "host", "--gpus", "all"],
	"containerEnv": {
		"VIRTUAL_ENV": "/opt/venv",
		"PATH": "/opt/venv/bin:${containerEnv:PATH}"
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"postCreateCommand": "pre-commit run --all",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff",
				"exiasr.hadolint",
				"ms-vscode.makefile-tools",
				"nhoizey.gremlins",
				"timonwong.shellcheck",
				"Gruntfuggly.todo-tree",
				"eamodio.gitlens",
				"oderwat.indent-rainbow"
			],
			"settings": {
				"python.analysis.extraPaths": ["${workspaceFolder}"],
				"jupyter.notebookFileRoot": "${workspaceFolder}",
				"python.defaultInterpreterPath": "/opt/venv/bin/python"
			}
		}
	}
}
